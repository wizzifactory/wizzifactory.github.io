$group
    $params &page

    header
        . flexbox
            . center-on-mobiles
                $if page.sectionTitle !== 'Home'
                    h1
                        a
                            href /
                            class logo
                            img
                                src ${pkg.Params.baseUrl}/images/logo.svg
                                width 140
                                height 65
                                alt Wizzi Logo
            nav
                class main-nav hide-on-mobiles
                ul
                    $foreach item in pkg.Section.items
                        li
                            $if item.title === page.sectionTitle
                                class current
                            a ${item.title}
                                href ${pkg.Params.baseUrl}${item.url}
            
            . search hide-on-mobiles
                < form
                    class searchbox
                    svg 
                        id sbx-icon-search-13
                        view-box 0 0 40 40
                        width 12
                        height 12
                        path 
